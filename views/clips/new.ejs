<% include ../partials/header %>

<link href="/css/luccy.css" rel="stylesheet">
	<link href="/css/menu.css" rel="stylesheet" />
    <script src="//cdn.ckeditor.com/4.13.1/standard/ckeditor.js"></script>

<div class="container">
    <div class="row">     
            <div style="width:90%; margin:100px auto ">
                <h1 class="header" style="text-align: center;">Add a New Clip</h1>
                <form action="/clips" method="POST">
                    <div class="form-group"> <input class="form-control" type="text" name="title" placeholder="title"> </div>
                    <div class="form-group"> <input class="form-control" type="text" name="speaker" placeholder="speaker"> </div>
                    <div class="form-group"> <input class="form-control" type="date" name="date" placeholder="date"> </div>
                    <div class="form-group"> <input class="form-control" type="text" name="postedBy" placeholder="postedBy"> </div>
                    <div class="form-group"> <input class="form-control" type="text" name="image" placeholder="image url"> </div>
                    <div class="form-group"> <input class="form-control" type="text" name="duration" placeholder="clip duration"> </div>
                    <div class="form-group"> <input class="form-control" type="text" name="clipUrl" placeholder="clip url"> </div>
                    <div class="form-group"> <textarea name="desc" class="form-control" id="" cols="60" rows="20" placeholder="review">What's this clip all about?</textarea></div>
                    <div class="form-group"> <button style="background-color: rgb(222, 191, 115);" class="btn btn-lg btn-primary btn-block">Submit!</button> </div>
                </form>   
                <a href="/clips">Go Back</a>
            </div>
    </div>
</div>

<script>
    CKEDITOR.replace( 'desc' );
  </script>

